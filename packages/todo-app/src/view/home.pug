doctype html
html
    head
        title Remember App
        link(rel="icon", href="/images/favicon.ico", type="image/x-icon")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
        link(href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
        style
            include home.css
    body
    section.container
        section.display-3.mb-2.text-center Remember App
        form(action="/add", method="POST").text-center
            div.form-group
                div.row
                    div.col-11
                        input(type="text", name="content").form-control.required
                    div.col-1
                        button.btn.btn-primary Add
        if !hasContent
            div.row
                div.col-12 
                    p.alert.alert-info.mt-2 Empty List
        ul.list-group.mt-5
            each val in items
                li.list-group-item
                    form(action=`/update/${val.content}`, method="POST")
                        div.row
                            div.col-9
                                input(type="text", name="itemContent", value=`${val.content}`).form-control
                            div.col-3
                                span.d-flex.justify-content-end
                                    button(type="submit").btn.btn-info
                                        i.fa.fa-edit
                                    a(href=`/delete/${val.content}`).btn.btn-secondary.ml-3
                                        i.fa.fa-trash
